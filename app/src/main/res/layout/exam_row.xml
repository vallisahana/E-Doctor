<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    app:cardCornerRadius="3dp"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical">

        <ImageView
            android:id="@+id/imageicon"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:src="@drawable/doooo" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp">



            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow>
                    <TextView
                        android:text="Doctor Name:"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:textColor="#000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>

                    <TextView
                        android:id="@+id/txtexamname"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:text="name here"
                        android:textColor="#000"
                        android:textSize="17dp">

                    </TextView>
                </TableRow>

                <TableRow>
                    <TextView
                        android:text="Specialist:"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:textColor="#000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>

                    <TextView
                        android:id="@+id/txtexamdate"
                        android:text="email here"
                        android:textSize="17dp"
                        android:textColor="#000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>
                </TableRow>



                <TableRow>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Experiance:"
                        android:textColor="#000"
                        android:textSize="18dp"
                        android:textStyle="bold">

                    </TextView>

                    <TextView
                        android:id="@+id/txtexamtime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="password here"
                        android:textColor="#000"
                        android:textSize="17dp">

                    </TextView>


                </TableRow>


                <TableRow>
                    <TextView
                        android:text="Hospital Name:"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:textColor="#000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>

                    <TextView
                        android:id="@+id/txtexamvenue"
                        android:layout_width="213dp"
                        android:layout_height="24dp"
                        android:text="phone here"
                        android:textColor="#000"
                        android:textSize="17dp">

                    </TextView>


                </TableRow>

                <TableRow>
                    <TextView
                        android:text="Fees:"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:textColor="#000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>

                    <TextView
                        android:id="@+id/txtfees"
                        android:layout_width="213dp"
                        android:layout_height="24dp"
                        android:text="phone here"
                        android:textColor="#000"
                        android:textSize="17dp">

                    </TextView>


                </TableRow>

                <TableRow>
                    <TextView
                        android:text="Phone:"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:textColor="#000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>

                    <TextView
                        android:id="@+id/txtphone"
                        android:layout_width="213dp"
                        android:layout_height="24dp"
                        android:text="phone here"
                        android:textColor="#000"
                        android:textSize="17dp">

                    </TextView>


                </TableRow>

                <TextView
                    android:layout_width="213dp"
                    android:layout_height="24dp"
                    android:textColor="#000"
                    android:textAlignment="center"
                    android:textSize="17sp"
                    android:background="@color/colorPrimaryDark"
                    android:text="More Details>>>>>>>">

                </TextView>

            </TableLayout>

        </LinearLayout>



    </LinearLayout>

</androidx.cardview.widget.CardView>